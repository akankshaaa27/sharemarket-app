{
  "version": 2,
  "installCommand": "cd client && pnpm install",
  "buildCommand": "cd client && pnpm run build:client",
  "outputDirectory": "client/dist/spa",
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist/spa" }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "client/dist/spa/$1" }
  ]
}
